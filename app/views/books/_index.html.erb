<table>
    <thead>
        <tr>
            <th class="pr-5"></th>
            <th class="pr-5">Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody id="book">
    <% books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
</table>